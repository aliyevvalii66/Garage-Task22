@model Category
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="row align-items-end">
                        <div class="col-lg-8">
                            <div class="page-header-title">
                                <div class="d-inline">
                                    <h4>Edit Categoory</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item" style="float: left;">
                                        <a href="@Url.Action("Index","Dashboard")"> <i class="feather icon-home"></i> </a>
                                    </li>
                                    <li class="breadcrumb-item" style="float: left;">
                                        <a href="@Url.Action("Index","Category")">Category List</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-block">
                                    <h4 class="sub-title">Basic Inputs</h4>
                                    <form method="post" asp-action="Edit" asp-controller="Category">
                                        <div class="form-group row">
                                            <label asp-for="Name" class="col-sm-2 col-form-label">
                                                Name
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="Name" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="Name" class="col-sm-2 col-form-label">
                                                Select Parent Category
                                            </label>
                                            <select asp-for="ParentCategoryId" asp-items="@(new SelectList(ViewBag.Categories,nameof(Model.Id),nameof(Model.Name)))" class="form-control form-control-primary">
                                                <option disabled selected>Categories</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-warning">Edit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>